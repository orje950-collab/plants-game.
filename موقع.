const totalQuestions = questions.length;

// Ø¨Ø¯Ø¡ Ø§Ù„Ù„Ø¹Ø¨Ø©
function startGame(){
  document.getElementById('quiz').style.display='block';
  const quizContainer = document.getElementById('quiz-questions');
  quizContainer.innerHTML = '';
  score = 0;
  answeredQuestions = 0;
  
  // Ø¹Ø±Ø¶ Ø§Ù„Ø£Ø³Ø¦Ù„Ø©
  questions.forEach((q,index)=>{
    let div = document.createElement('div');
    div.classList.add('question-block');
    div.innerHTML = `<div class="question">${index+1}. ${q.q}</div>
      ${q.options.map((opt,i)=>`<button onclick="answerQuestion(${index},${i},this)">${opt}</button>`).join('')}
      <div class="result" id="result-${index}"></div>`;
    quizContainer.appendChild(div);
  });
  
  document.getElementById('finalResult').style.display='none';
  // Ø§Ù„ØªÙ…Ø±ÙŠØ± Ø¥Ù„Ù‰ Ù‚Ø³Ù… Ø§Ù„Ù„Ø¹Ø¨Ø©
  window.scrollTo({top:document.getElementById('quiz').offsetTop, behavior:'smooth'});
